#include <stdio.h>

int main(void) {
    
    //二维数组的赋值
    printf("-------------二维数组赋值--------------\n");
    int arr[3][4]; //定义一个二维数组（３行４列）；  = {{1,2,3,4},{6,7,8,9},{0,0,0,0}}
    int i ,j;  //定义两个int类型的变量(变量可以在运行的时候修改值)  不赋值的话会默认为0
    
    for (i = 0; i<3; i++) { //for循环循环3次,一开始给i赋值为0,每次循环都加1 (i++ 是后自增)
        printf("外循环,第%d次循环\n",i);
        for (j = 0; j<4; j++) { //for循环4次,一开始给j赋值为0,每次循环都加1 (j++ 后自增)
            arr[i][j]=j;
            printf("    第%d行,第%d个元素,值为%d !\n",i,j,arr[i][j]);
        }
    }
    
    //二维数组的输出 int arr[3][4] = {{1,2,3,4},{6,7,8,9},{0,0,0,0}};//定义一个二维数组（３行４列）；
    printf("\n-------------二维数组输出--------------\n");
    
    for (i = 0; i<3; i++) {  //for循环循环3次,一开始给i赋值为0,每次循环都加1 (i++ 是后自增)
        printf("外循环,第%d次循环\n",i);
        for (j = 0; j<4; j++) { //for循环循环4次,一开始给j赋值为0,每次循环都加1 (j++ 后自增)
            printf("    第%d行,第%d个元素,值为%d !\n",i,j,arr[i][j]);
        }
    }
    
   
   return 0;
} 
